
<h1>Friends List</h1>

<table class="table table-striped table table-bordered table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan=" "></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
         <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %>
         </td>
          <td><%= friend.email %></td>
         <td><%= link_to 'Delete Friend', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

